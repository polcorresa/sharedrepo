# ======================
# API (Backend) Config
# ======================

# Server port
PORT=3000

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sharedrepo

# Secret key for signing access tokens (min 32 chars recommended)
APP_SECRET=your-secret-key-change-this-in-production-min-32-chars

# Cookie name for access tokens
COOKIE_NAME=sharedrepo_token

# Node environment
NODE_ENV=development

# ======================
# Web (Frontend) Config
# ======================

# API base URL (for HTTP requests)
VITE_API_BASE=http://localhost:3000

# WebSocket base URL (for Yjs sync and tree events)
VITE_WS_BASE=ws://localhost:3000
