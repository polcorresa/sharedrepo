{
  "name": "sharedrepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r --filter=./packages/* --filter=./apps/* run build",
    "dev": "pnpm -r --parallel --filter=./apps/* run dev",
    "dev:api": "pnpm --filter=api run dev",
    "dev:web": "pnpm --filter=web run dev",
    "lint": "eslint --config config/eslint.config.js .",
    "format": "prettier --config config/.prettierrc.json --write .",
    "format:check": "prettier --config config/.prettierrc.json --check .",
    "test:unit": "pnpm -r --filter=./packages/* --filter=./apps/* run test:unit",
    "test:int": "pnpm -r --filter=./packages/* --filter=./apps/* run test:int",
    "test:e2e": "pnpm --filter=testing run test:e2e",
    "typecheck": "pnpm -r --filter=./packages/* --filter=./apps/* run typecheck",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "eslint": "^9.11.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0"
  }
}
